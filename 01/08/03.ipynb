    "import re\n",
    "\n",
    "some_words = 'Near Field Communication'\n",
    "\n",
    "\n",
    "def get_acronym(_str):\n",
    "    text = ''\n",
    "\n",
    "    _str = re.findall(r'\\w+', some_words)\n",
    "\n",
    "    lst = [re.match(r'^\\w', i)[0] for i in _str]\n",
    "\n",
    "    for i in lst:\n",
    "        text += i\n",
    "\n",
    "    return text.upper()\n",
    "\n",
    "\n",
    "print(get_acronym(some_words))"
   ]
